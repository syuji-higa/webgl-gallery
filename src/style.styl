body
  background-color #f6f3f6
  margin 0
  overflow hidden
h1
  margin -3.4vw 0 0 -1.6vw
  line-height 1
  letter-spacing: -.06em
  color #e6e3e6
  font-size 16.2vw
  font-family 'PT Sans Caption', sans-serif
  font-weight 700
  white-space nowrap
  filter blur(3px)
ul
  padding 0 6vw
  margin-top -6vw;
  list-style-type none
  position relative
li
  float left
  line-height 1.8
  &::after
    content "+"
    margin 0 .5em
    color #c6c3c6
  &:last-child
    &::after
      display none
a
  display inline-block
  position relative
  text-decoration none
  letter-spacing: -.04em
  color #797079
  font-size 1.4rem
  font-family 'Ubuntu Condensed', sans-serif
  font-weight 400

@media screen and (min-width: 768px)
  a
    cursor pointer
    &::after
      content ""
      display block
      width 100%
      height 2px
      background #f6f3f6
      position absolute
      top 50%
      transform scaleX(0)
      transition transform .3s ease-out
      transform-origin 0 0
    &:hover
      &::after
        transform scaleX(1)

